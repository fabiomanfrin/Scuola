<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fabiomanfrin.carfinder.addParkingFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/ParkingName_EditText"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:layout_marginTop="52dp"
            android:layout_weight="1"
            android:autoText="false"
            android:ems="10"
            android:hint="Insert a parking name..."
            android:inputType="text"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="120dp"
            android:text="Cancel"
            android:textAppearance="@android:style/TextAppearance.Material.Button"
            app:layout_constraintTop_toBottomOf="@+id/coordinates_text"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/coordinates_text"
            android:layout_width="141dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ParkingName_EditText"
            android:layout_weight="1"
            android:text=" coordinates"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/ParkingName_EditText"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/SaveParking_button"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:text="Save parking"
            android:textAppearance="@android:style/TextAppearance.Material.Button"
            app:layout_constraintTop_toBottomOf="@+id/coordinates_text"
            app:layout_constraintLeft_toRightOf="@+id/cancel_button"
            android:layout_marginLeft="113dp"
            android:layout_marginStart="113dp" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
